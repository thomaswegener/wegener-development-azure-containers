generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProjectStatus {
  DISCOVERY
  ACTIVE
  LAUNCHED
  MAINTENANCE
  PAUSED
}

enum IssueStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

enum FeatureStatus {
  SUBMITTED
  UNDER_REVIEW
  PLANNED
  IN_PROGRESS
  DONE
  DECLINED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum CommentVisibility {
  PUBLIC
  INTERNAL
}

model Customer {
  id          String    @id @default(uuid())
  authUserId  String    @unique
  companyName String?
  createdAt   DateTime  @default(now())
  projects    Project[]
}

model Project {
  id          String        @id @default(uuid())
  customerId  String
  customer    Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  name        String
  description String?
  tier        String?
  status      ProjectStatus @default(DISCOVERY)
  startedAt   DateTime?
  launchedAt  DateTime?
  websiteUrl  String?
  githubRepo  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  issues      Issue[]
  features    FeatureRequest[]
  plans       Plan[]
  roadmapEntries RoadmapEntry[]
}

model Issue {
  id               String      @id @default(uuid())
  projectId        String
  project          Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title            String
  description      String?
  status           IssueStatus @default(OPEN)
  priority         Priority    @default(MEDIUM)
  githubIssueNumber Int?
  githubIssueUrl   String?
  resolvedAt       DateTime?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  authorUserId     String
  comments         Comment[]
}

model FeatureRequest {
  id               String        @id @default(uuid())
  projectId        String
  project          Project       @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title            String
  description      String?
  status           FeatureStatus @default(SUBMITTED)
  priority         Priority      @default(MEDIUM)
  githubIssueNumber Int?
  githubIssueUrl   String?
  votes            Int           @default(1)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  authorUserId     String
  comments         Comment[]
}

model Plan {
  id        String   @id @default(uuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title     String
  content   String
  phase     String?
  order     Int      @default(0)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoadmapEntry {
  id            String    @id @default(uuid())
  projectId     String?
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title         String
  description   String?
  category      String?
  status        String    @default("planned")
  targetQuarter String?
  order         Int       @default(0)
  completedAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Comment {
  id         String            @id @default(uuid())
  issueId    String?
  issue      Issue?            @relation(fields: [issueId], references: [id], onDelete: Cascade)
  featureId  String?
  feature    FeatureRequest?   @relation(fields: [featureId], references: [id], onDelete: Cascade)
  authorUserId String
  content    String
  visibility CommentVisibility @default(PUBLIC)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
}

model AuditLog {
  id          String   @id @default(uuid())
  actorUserId String
  action      String
  entityType  String
  entityId    String
  changes     Json?
  createdAt   DateTime @default(now())
}
